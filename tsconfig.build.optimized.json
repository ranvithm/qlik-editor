{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "composite": false,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist", 
    "node_modules", 
    "**/*.test.*", 
    "**/*.spec.*", 
    "**/*.stories.*",
    "example/**/*",
    "src/**/*.test.tsx",
    "src/**/*.test.ts"
  ]
}